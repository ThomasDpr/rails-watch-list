
<h1><%= @list.name %></h1>

<br>

<div class="container">
<%= link_to 'Revenirs aux listes', lists_path, class: 'btn btn-dark'  %>
<%= link_to "Supprimer ma liste",
  list_path(@list),
  data: {turbo_method: :delete, turbo_confirm: "Êtes-vous sûr ?"}, class: 'btn btn-dark' %>
</div>

<br>

<ul>
  <% @list.bookmarks.each do |bookmark| %>
    <li>
      <h4><%= bookmark.movie.title %> • <%= bookmark.movie.rating %>/10 ⭐️</h4>
      <p><%= bookmark.comment %></p>
      <%= link_to "delete", bookmark_path(bookmark), data: {turbo_method: :delete, turbo_confirm: "Êtes-vous sûr ?"}, class: 'btn btn-outline-secondary' %>
    </li>
  <% end %>
</ul>

<br>

<div class="container">
  <%= link_to "add a movie", new_list_bookmark_path(@list), class: 'btn btn-outline-secondary' %>
</div>
